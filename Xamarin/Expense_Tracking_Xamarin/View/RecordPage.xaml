<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Expense_Tracking_Xamarin.ViewModel"
             x:Class="Expense_Tracking_Xamarin.View.RecordPage"
             Title="Record">
    <ContentPage.BindingContext>
        <vm:RecordPageViewModel>
        </vm:RecordPageViewModel>
    </ContentPage.BindingContext>
    <StackLayout
        Orientation="Vertical">
       <ListView
           x:Name="listview"
           ItemsSource="{Binding Records}"
           SelectedItem="{Binding EditRec}"
           IsPullToRefreshEnabled="True"
           IsRefreshing="{Binding isbusy}"
           RefreshCommand="{Binding refresh}"
           SelectionMode="Single">
           <ListView.ItemTemplate>
               <DataTemplate>
                   <ImageCell
                       Text="{Binding amount}" Detail="{Binding newDetail}" ImageSource="{Binding iconstring}" TextColor="{Binding txtcolor}"/>
               </DataTemplate>
           </ListView.ItemTemplate>
       </ListView>
    </StackLayout>
</ContentPage>
